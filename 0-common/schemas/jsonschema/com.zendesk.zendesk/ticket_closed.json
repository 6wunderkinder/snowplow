{
	"$schema": "http://json-schema.org/schema#",
	"description": "Schema for a ticket being closed",
	"self": {
		"vendor": "com.zendesk.zendesk",
		"name": "ticket_closed",
		"format": "jsonschema",
		"version": "1-0-0"
	},

	"type": "object",
	"properties": {
		"ticket.account": {
			"type": "string"
		},
		"ticket.cc_names": {
			"type": "string"
		},
		"ticket.created_at": {
			"type": "string"
		},
		"ticket.created_at_with_timestamp": {
			"type": "string"
		},
		"ticket.due_date": {
			"type": "string"
		},
		"ticket.due_date_with_timestamp": {
			"type": "string"
		},
		"ticket.external_id": {
			"type": "string"
		},
		"ticket.group.name": {
			"type": "string"
		},
		"ticket.id": {
			"type": "string"
		},
		"ticket.in_business_hours": {
			"type": "boolean"
		},
		"ticket.organization.name": {
			"type": "string"
		},
		"ticket.priority": {
			"enum": ["Low", "Normal", "High", "Urgent"]
		},
		"ticket.score": {
			"type": "number"
		},
		"ticket.status": {
			"enum": ["New", "Open", "Pending", "Solved"]
		},
		"ticket.tags": {
			"type": "string"
		},
		"ticket.ticket_type": {
			"type": "string"
		},
		"ticket.title": {
			"type": "string"
		},
		"ticket.updated_at": {
			"type": "string"
		},
		"ticket.updated_at_with_timestamp": {
			"type": "string"
		},
		"ticket.url": {
			"type": "string",
		},
		"ticket.url_with_protocol": {
			"type": "string",
		},
		"ticket.via": {
			"type": "string"
		},
		"ticket.assignee": {
			"$ref": "#/definitions/user"
		},
		"ticket.requester": {
			"$ref": "#/definitions/user"
		},
		"ticket.current_user": {
			"$ref": "#/definitions/user"
		}
	},

	"definitions": {
		"user": {
			"type": "object",
			"properties": {
				"user.name": {
					"type": "string"
				},
				"user.first_name": {
					"type": "string"
				},				
				"user.last_name": {
					"type": "string"
				},				
				"user.email": {
					"type": "string"
				},
				"user.language": {
					"type": "string"
				},
				"user.phone": {
					"type": "string"
				},
				"user.external_id": {
					"type": "string"
				},
				"user.details": {
					"type": "string"
				},
				"user.notes": {
					"type": "string"
				},
				"user.time_zone": {
					"type": "string"
				},				
				"user.role": {
					"type": "string"
				},		
				"user.extended_role": {
					"type": "string"
				},
				"user.id": {
					"type": "string"
				},		
